<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_small_size"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/padding_low_size">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_noun_939634_cc"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trailer_text"
        android:textSize="@dimen/movie_synopsis_size"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/padding_small_size"
        android:paddingBottom="@dimen/padding_low_size"
        android:paddingTop="@dimen/padding_low_size"
        />
</LinearLayout>
